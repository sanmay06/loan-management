<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/jakartaee" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd" version="6.0">
  
  <display-name>loan_management</display-name>
  
  <welcome-file-list>
    <welcome-file>Login.jsp</welcome-file>
  </welcome-file-list>
<servlet>	
    <servlet-name>sign-in</servlet-name>
    <jsp-file>/signin.jsp</jsp-file>  
  </servlet>
  <servlet-mapping>
    <servlet-name>sign-in</servlet-name>  
    <url-pattern>/sign-in</url-pattern>
  </servlet-mapping>
  <servlet>	
    <servlet-name>home</servlet-name>
    <jsp-file>/home.jsp</jsp-file>  
  </servlet>
  <servlet-mapping>
    <servlet-name>home</servlet-name>  
    <url-pattern>/home</url-pattern>
  </servlet-mapping>
  <servlet>	
    <servlet-name>login</servlet-name>
    <jsp-file>/Login.jsp</jsp-file>  
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>  
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>	
    <servlet-name>login_fail</servlet-name>
    <jsp-file>/loginfail.jsp</jsp-file>  
  </servlet>
  <servlet-mapping>
    <servlet-name>login_fail</servlet-name>  
    <url-pattern>/loginfail</url-pattern>
  </servlet-mapping>
  
  <servlet>	
    <servlet-name>insloan</servlet-name>
    <jsp-file>/insert.jsp</jsp-file>  
  </servlet>
  <servlet-mapping>
    <servlet-name>insloan</servlet-name>  
    <url-pattern>/home/ins</url-pattern>
  </servlet-mapping>
  <servlet>	
    <servlet-name>profile</servlet-name>
    <jsp-file>/profile.jsp</jsp-file>  
  </servlet>
  <servlet-mapping>
    <servlet-name>profile</servlet-name>  
    <url-pattern>/profile</url-pattern>
  </servlet-mapping>
  <servlet>	
    <servlet-name>profilesave</servlet-name>
    <jsp-file>/saveProfile.jsp</jsp-file>  
  </servlet>
  <servlet-mapping>
    <servlet-name>profilesave</servlet-name>  
    <url-pattern>/profilesave</url-pattern>
  </servlet-mapping>
  <servlet>	
    <servlet-name>updateloan</servlet-name>
    <jsp-file>/update.jsp</jsp-file>  
  </servlet>
  <servlet-mapping>
    <servlet-name>updateloan</servlet-name>  
    <url-pattern>/update</url-pattern>
  </servlet-mapping>
  <!-- Define reg servlet -->
  <servlet>
    <servlet-name>reg</servlet-name>
    <servlet-class>logging.reg</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>reg</servlet-name>
    <url-pattern>/create</url-pattern>
  </servlet-mapping>

</web-app>
